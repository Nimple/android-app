<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ncode_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/spinner_layout"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:spinnerMode="dropdown"/>

        <ImageButton
            android:id="@+id/ncard_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_action_add_to_queue"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/card_frame_selector"
        android:gravity="center"
        android:id="@+id/relativeLayout"
        android:layout_below="@id/spinner_layout">

        <ImageView
            android:id="@+id/codeImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <TextView
        android:id="@+id/ncodeInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text="@string/ncode_footer"
        android:textAppearance="@style/NimpleTextAnnotation" />



</RelativeLayout>